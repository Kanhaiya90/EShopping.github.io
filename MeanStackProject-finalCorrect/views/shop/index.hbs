<head>
    <style>

    </style>

    <div class="row">
        <div class="col-sm-6 col-md-4 col-md-offset-4 col-sm-offset-3">
            <div id="success" class="alert alert-success" {{# if noMessages }}hidden{{/if}}>
                {{successMsg}}

            </div>
        </div>
    </div>
</head>
<img width="100%" src="https://social.bigbazaar.com/images/home_banner.jpg?version=2.2.15&subv=1.8"
    alt="livewire-shopping">

<h1 align="center">Products</h1>

{{# each products}}

<div class="row">

    {{# each this}}
    <div class="col-md-4">
        <div class="card ">
            <div class="card-body" >
                <img  width="300px" height="300px"
                    src="{{ this.imagepath }}">

            </div>
            <div class="card-body">
                <h2>{{ this.title }}</h2>

                <p class="description">{{ this.description }}</p>

                <p class="title">Rs.{{ this.price }}</p>

                <a href="/add-to-cart/{{ this._id }}"><button style="float: right; margin-top:-50px"
                        class="button btn btn-success">Add to Cart</button></a>
            </div>
        </div>
    </div>


    {{/each}}


    {{/each}}

    